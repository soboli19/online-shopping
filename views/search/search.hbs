<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-md-offset-3" >
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
             {{ successMsg }}
        </div>
    </div>
</div>

<p2> MySQL search result keyword {{searchkey}}</p2>
<p2> number of results {{result.length}} </p2>     
<p2> {{searchmsg}}</p2>

<div class="container-fluid">
 <div class="card"> 
  <div class='card-header clearfix'>
   <h2 class="h3 float-left">Продукт</h2>
  <div class="table-responsive">
   <table class="table  taable-striped table-hover table-bordered">
    <thead>
      <tr>
          <td>Название</td>
          <td>Описание</td>
          <td>Цена $</td>
         <td>Производитель</td> 
      </tr>
    </thead>
    <tbody>
     {{#each result}}
      <tr>
          <td>{{ this.Pr_Name }}</td>
          <td>{{ this.Description }}</td>
          <td>{{ this.sale_price }}</td>
          <td>{{ this.Manufacture }}</td>
      </tr>
    {{/each}}
    </tbody>
   </table>
  </div>
 </div>
</div> 
