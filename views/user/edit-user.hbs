<div class="card">
    <div class="card-header clearfix">
        <h2 class="h3 float-left">Edit User</h2>
        <div class="float-right">
            <a href="/" class="btn btn-primary">Cancel</a>
        </div>
    </div>
    <div class="card-body">
        <form id="editArticle" class="card-body" method="post" action="/edit-user">
            <!--<div id="formMsg" class="alert alert-danger text-center">Your form has errors</div> -->

            <div class="row">
                    <div class="form-group col-md-6">
                      <label for="email">Email: {{user.email}}</label>
                    </div>
                        
                     <div class="form-group col-md-6">
                    <label for="name">Name: {{user.name}}</label>
                    <input type="text" id="title" name="name" class="form-control" value="" >
                </div>
            </div>
  
                <div class="row">
                  <div class="form-group col-md">
                   <label class"radio-inline" for="active">Active show current: {{user.active}}</label>
                    <div>
                        <label class="radio-inline" for="storedisplay">true
                            <input type="radio" id="female" name="active" value="true">
                        </label>
                        <label class="radio-inline" for="storedisplay">false
                            <input type="radio" id="female" name="active" value="false">
                        </label>
                    </div>
                  </div>
                  <div class="form-group col-md">
                    <label class"radio-inline" for="admin">Admin show current: {{user.admin}}</label>
                    <div>
                        <label class="radio-inline" for="storedisplay">true
                            <input type="radio" id="female" name="admin" value="true">
                        </label>
                        <label class="radio-inline" for="storedisplay">false
                            <input type="radio" id="female" name="admin" value="false">
                        </label>
                    </div>
                  </div>
                </div>
  
                  
                <div>
                    <label for="_id">UserID: {{user.id}}</label>
                  <input type="hidden" id="_id" name="_id" class="form-control" value={{user.id}} required>
                </div>
                
  
                <div class="text-right">
                  <input type="submit" value="Submit" class="btn btn-lg btn-primary btn-sm-block">
                 <!-- <a href="/edit-product/{{product.id}}"  class="btn btn-success mt-auto float-ris.s.ght" role="button">Save</a> -->
                </div>
              </form>
            </div>